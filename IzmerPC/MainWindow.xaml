<Window
    x:Class="IzmerPC.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:IzmerPC"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid Background="#FF252222">
        <ComboBox
            x:Name="ComPortBox"
            Width="120"
            Margin="662,59,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            DropDownClosed="ComPortBox_Closed"
            DropDownOpened="ComPortBox_Opened" />
        <Button
            Width="75"
            Margin="79,200,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Button_Click"
            Content="Button" />
        <ListBox
            x:Name="InfoWindow"
            Width="426"
            Height="301"
            Margin="222,47,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />
        <Label
            Width="142"
            Height="32"
            Margin="222,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="COM-Content:"
            Foreground="#FFF3F3F3" />
        <Button
            x:Name="SendButton"
            Width="81"
            Height="31"
            Margin="677,365,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="SendButton_Click"
            Content="Send" />
        <TextBox
            x:Name="WriteBox"
            Width="426"
            Height="23"
            Margin="222,370,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
    </Grid>
</Window>
